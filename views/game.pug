extends navBar
append styles
	// Custom styles for this template
	link(href='styles/home.css', rel='stylesheet')
	link(href='styles/game.css', rel='stylesheet')
append scripts
	script(src="scripts/game.js")
block content
	div(id="top")
		form(id="settings")
			br
			label(for="difficulty") Difficulty: 
			select(id="difficulty")
				option(value="Easy") Easy
				option(value="Medium") Medium
			br
			label(for="playerColor") User color: 
			select(id="playerColor")
				option(value="white") White
				option(value="black" selected) Black
			br
			label(for="npcColor") NPC color: 
			select(id="npcColor")
				option(value="white") White
				option(value="black") Black
			br
		button Apply
	br
	div(id="game")
		table(style="text-align:center;" id="board" class="board")
		table(id="interface" class="interface")