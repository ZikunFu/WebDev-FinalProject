				#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav
						li
							a(href='/' id="bar1") Home
						li
							a(href='/profile' id="bar2") Profile
						li
							a(href='/guide' id="bar3") Guide
						li
							a(href='/rank' id="bar4") Rank
					ul.nav.navbar-nav.navbar-right
						if(!auth)
							li.active
								a(href='/login' id="right1")
									| Login
									span.sr-only (current)	
							
							li.active
								a(href='/register' id="right2")
									| Register
									span.sr-only (current)
						else
							li.active
								a(href='/logout' id="right3")
									| Logout
									span.sr-only (current)	
